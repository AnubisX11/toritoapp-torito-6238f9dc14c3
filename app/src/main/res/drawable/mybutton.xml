<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#366B07" />
            <gradient android:angle="-90" android:startColor="#4B930D" android:endColor="#62A726"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#62A726" />
            <solid android:color="#4B930D"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#366B07" />
            <gradient android:angle="-45" android:startColor="#62A726" android:endColor="#4B930D" />
        </shape>
    </item>
</selector>