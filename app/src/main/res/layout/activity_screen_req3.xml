<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="233dp"
            android:layout_height="233dp"
            android:id="@+id/imageView"
            android:src="@drawable/cortes_06" />

        <TextView
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Realizar el pago correspondiente con cargo a tu tarjeta de débito o credito."
            android:id="@+id/textInfo"
            android:textSize="20dp"
            android:textColor="@color/colorSubtitle"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bienvenido"
        android:textColor="@color/colorWelcome"

        android:id="@+id/textWelcome"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <Button
        android:id="@+id/btn_continuar_1"
        android:layout_gravity="center"
        android:text="Siguiente"
        android:background="@drawable/mybutton"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textWelcome"
        android:layout_alignStart="@+id/textWelcome"
        android:layout_alignRight="@+id/textWelcome"
        android:layout_alignEnd="@+id/textWelcome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Necesitas"
        android:id="@+id/textView"
        android:textColor="@color/colorSubtitle"
        android:textSize="28dp"
        android:layout_below="@+id/textWelcome"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_gravity="center"
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toLeftOf="@+id/textView13"
        android:layout_toStartOf="@+id/textView13"
        />

    <TextView
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textColor="@color/colorSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acepto los terminos y condiciones"
        android:id="@+id/textView13"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/btn_continuar_1"
        android:layout_alignStart="@+id/btn_continuar_1"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leer los términos y condiciones"
        android:id="@+id/textView15"
        android:layout_below="@+id/checkbox"
        android:layout_toRightOf="@+id/checkbox"
        android:layout_toEndOf="@+id/checkbox"
        android:textSize="18dp"
        android:textColor="#02A89A"
      />

</RelativeLayout>