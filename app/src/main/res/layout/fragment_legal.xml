<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.torito.Legal">

    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/Legalito">


        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:fontFamily="sans-serif-medium"
            android:textSize="25dp"
            android:text="Tu orden y pago han sido confirmados. Crearemos tus documentos instantaneamente"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
             />

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Recibiras tu orden de confirmacion en tu email: "
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="correo@prueba.com"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tu número de orden es"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="33698"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="#F7FE2E"
            android:fontFamily="sans-serif-medium"
            android:padding="3dp"
            android:layout_marginBottom="20dp"/>

        <TextView

            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Debes primero terminar en las 2 pestañas anteriores para poder pasar a esta"
            android:id="@+id/textView14"
            android:layout_alignTop="@+id/textView5"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</ScrollView>


