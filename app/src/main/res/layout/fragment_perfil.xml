<ScrollView
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/Perfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="com.torito.Perfil"
        android:weightSum="1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Proporciona los siguientes datos"
            android:id="@+id/texto1"
            android:layout_weight="0.33"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="28dp"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/Nombre"
            android:layout_marginTop="44dp"
            android:background="#bebebe"
            android:drawableStart="@drawable/icono23px"
            android:layout_below="@+id/texto1"
            android:layout_centerHorizontal="true"
            android:hint="Nombre(s)"/>


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/Materno"
            android:layout_marginTop="15dp"
            android:background="#bebebe"
            android:drawableStart="@drawable/icono23px"
            android:layout_below="@+id/Paterno"
            android:layout_alignLeft="@+id/Paterno"
            android:layout_alignStart="@+id/Paterno"
            android:hint="Apellido Materno"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/Paterno"
            android:background="#bebebe"
            android:drawableStart="@drawable/icono23px"
            android:layout_below="@+id/Nombre"
            android:layout_alignLeft="@+id/Nombre"
            android:layout_alignStart="@+id/Nombre"
            android:layout_marginTop="15dp"
            android:hint="Apellido Paterno"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/Telefono"
            android:background="#bebebe"
            android:drawableStart="@drawable/icono23px"
            android:layout_below="@+id/Materno"
            android:layout_alignLeft="@+id/Materno"
            android:layout_alignStart="@+id/Materno"
            android:layout_marginTop="15dp"
            android:hint="TelÃ©fono"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/Email"
            android:background="#bebebe"
            android:drawableStart="@drawable/icono23px"
            android:layout_below="@+id/Telefono"
            android:layout_alignLeft="@+id/Telefono"
            android:layout_alignStart="@+id/Telefono"
            android:layout_marginTop="15dp"
            android:hint="Correo Electronico"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:id="@+id/button"
            android:layout_below="@+id/Email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>
</ScrollView>