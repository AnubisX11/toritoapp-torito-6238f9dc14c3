<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.torito.Rescatenme"
    android:focusable="true"
    android:focusableInTouchMode="true">

<RelativeLayout  android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ahora procederemos con el pago"
        android:id="@+id/texto2"
        android:layout_weight="0.33"
        android:textAlignment="textStart"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textSize="28dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre (Como aparece en la tarjeta)"
        android:textSize="18dp"
        android:fontFamily="serif-medium"
        android:id="@+id/textView"
        android:layout_below="@+id/texto2"
        android:layout_alignLeft="@+id/texto2"
        android:layout_alignStart="@+id/texto2"
        android:layout_alignRight="@+id/texto2"
        android:layout_alignEnd="@+id/texto2" />

    <EditText
        android:text="Roberto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/NombreTarjeta"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:background="#bebebe"
        android:hint="Nombre"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fecha en que vence la tarjeta"
        android:id="@+id/textView2"
        android:textSize="18dp"
        android:layout_below="@+id/NumeroTarjeta"
        android:layout_alignLeft="@+id/NumeroTarjeta"
        android:layout_alignStart="@+id/NumeroTarjeta" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:id="@+id/linearLayout">

        <EditText
            android:text="11"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/MesTarjeta"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#bebebe"
            android:hint="Mes"/>

        <EditText
            android:text="2016"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/AñoTarjeta"
            android:background="#bebebe"
            android:hint="Año"/>




    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Codigo de seguridad"
        android:id="@+id/textView3"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <EditText
        android:text="321"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CVCTarjeta"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:background="#bebebe"
        android:layout_marginTop="10dp"
        android:hint="CVC"
        android:inputType="numberPassword"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CVCTarjeta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/linearLayout2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total:"
            android:textSize="35dp"
            android:layout_gravity="center_vertical"

            android:id="@+id/textView6" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$2900"
            android:textSize="40dp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_gravity="center_horizontal"
            android:id="@+id/CostoRescate" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mxn"
            android:textSize="27dp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView8" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:id="@+id/button2"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:fontFamily="serif-medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Numero de la Tarjeta"
        android:id="@+id/textView7"
        android:layout_weight="1"
        android:layout_below="@+id/NombreTarjeta"
        android:layout_alignLeft="@+id/NombreTarjeta"
        android:layout_alignStart="@+id/NombreTarjeta"
        android:layout_alignRight="@+id/NombreTarjeta"
        android:layout_alignEnd="@+id/NombreTarjeta" />

    <EditText
        android:text="4242424242424242"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/NumeroTarjeta"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:background="#bebebe"
        android:hint="Numero de tarjeta"/>

</RelativeLayout>
</ScrollView>

